<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://storeProductBrowse.caption"
        focusComponent="storeProductsTable"
        messagesPack="com.company.onlinestore.web.screens.storeproduct">
    <data readOnly="true">
        <collection id="storeProductsDc"
                    class="com.company.application.entity.StoreProduct">
            <view extends="storeProduct-view"/>
            <loader id="storeProductsDl">
                <query>
                    <![CDATA[select e from application_StoreProduct e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="storeProductsTable"
            spacing="true">
        <filter id="filter"
                applyTo="storeProductsTable"
                dataLoader="storeProductsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="storeProductsTable"
                    width="100%"
                    dataContainer="storeProductsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="store"/>
                <column id="product"/>
                <column id="price"/>
                <column id="count"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="storeProductsTable.create"/>
                <button id="editBtn" action="storeProductsTable.edit"/>
                <button id="removeBtn" action="storeProductsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
